    body {
      font-family: sans-serif;
      margin: 0;
      padding: 0;
      background: #f4f4f4;
      display: flex;
      flex-direction: column;
    }

    header {
      text-align: center;
      margin: 10px 0 0 0;
    }

    header img {
      max-width: 100%;
      height: auto;
      max-height: 100px;
    }

    h1 {
      text-align: center;
      padding: 1rem 1rem 0 1rem;
      margin-bottom: 0.5rem;
    }

    .container {
      display: flex;
      flex-direction: row;
      min-height: 100vh;
    }

    .sidebar {
      width: 250px;
      background: #ffffff;
      padding: 1rem;
      box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }

    .sidebar h2 {
      font-size: 1.1rem;
      margin-top: 1rem;
    }

    .sidebar a {
