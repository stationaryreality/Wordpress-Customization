      text-decoration: none;
    }

    .sidebar a:hover {
      text-decoration: underline;
    }

    .content {
      flex: 1;
      padding: 2rem;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1.5rem;
      max-width: 1600px;
      margin: auto;
      box-sizing: border-box;
    }

    .card {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      transition: transform 0.2s ease;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .card img {
      width: 100%;
      height: 80px;
      object-fit: contain;
      background: #fff;
    }

    .card h3 {
      padding: 0.5rem;
      font-size: 0.95rem;
      margin: 0;
      text-align: center;
    }

    /* Hamburger & mobile styles */
    .hamburger {
      display: none;
      background: none;
      border: none;
      font-size: 1.5rem;
      margin: 1rem;
    }

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
      }

      .sidebar {
        display: none;
        width: 100%;
      }

      .sidebar.open {
        display: block;
      }

      .hamburger {
        display: block;
        align-self: flex-start;
      }

      .content {
        padding: 1rem;
      }
    }
  </style>
